{
  "name": "asciitorium",
  "version": "0.1.0",
  "description": "An ASCII-based UI framework",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    }
  },
  "type": "module",
  "scripts": {
    "start:web": "vite",
    "build": "vite build",
    "preview": "vite preview",
    "format": "prettier --write .",
    "art": "node scripts/generate-art.js",
    "art:fonts": "node -e 'require(\"figlet\").fonts((_, f) => console.log(f.join(\"\\n\")))'",
    "start:cli": "tsx src/main.cli.tsx"
  },
  "author": "Trevor Gruby <trevor.gruby@outlook.com>",
  "keywords": [
    "ascii",
    "ui",
    "framework",
    "terminal",
    "typescript"
  ],
  "license": "MIT",
  "devDependencies": {
    "@types/figlet": "^1.7.0",
    "@types/fs-extra": "^11.0.4",
    "@types/node": "^24.0.12",
    "fs-extra": "^11.3.0",
    "prettier": "^3.6.2",
    "tsx": "^4.20.3",
    "typescript": "^5.8.3",
    "vite": "^7.0.3"
  },
  "dependencies": {
    "figlet": "^1.8.1"
  }
}
