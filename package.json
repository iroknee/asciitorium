{
  "name": "asciitorium-monorepo",
  "private": true,
  "version": "0.1.13",
  "description": "Monorepo for asciitorium and create-asciitorium",
  "scripts": {
    "build": "npm run build --workspaces",
    "lint": "npm run lint --workspaces",
    "release": "npm run publish --workspaces",
    "demo": "cd packages/asciitorium && npm run web",
    "demo:cli": "cd packages/asciitorium && npm run cli",
    "test:pack": "scripts/pack-lib-test.sh",
    "test:create": "scripts/create-asciitorium-test.sh",
    "publish:lib": "npm run build --workspace=asciitorium && cd packages/asciitorium && npm publish",
    "publish:create": "npm run build --workspace=create-asciitorium && cd packages/create-asciitorium && npm publish"

  },
  "workspaces": [
    "packages/*"
  ]
}
