{
  "name": "asciitorium-monorepo",
  "private": true,
  "version": "0.1.19",
  "description": "Monorepo for asciitorium and create-asciitorium",
  "scripts": {
    "web": "cd packages/asciitorium && npm run web",
    "cli": "cd packages/asciitorium && npm run cli",
    "build": "npm run build --workspaces",
    "test": "scripts/test-create.sh && cd tmp/asciitorium/example && npm run web",
    "version": "node scripts/update-version.js",
    "release": "npm run publish:lib && npm run publish:create"
  },
  "workspaces": [
    "packages/*"
  ]
}
