{
  "name": "create-asciitorium",
  "version": "0.1.32",
  "private": false,
  "description": "Scaffold a Vite + TypeScript project prewired for asciitorium (web + cli).",
  "bin": {
    "create-asciitorium": "dist/index.js"
  },
  "type": "module",
  "license": "MIT",
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "build": "tsc -p tsconfig.json",
    "postbuild": "cp -r templates dist/",
    "dev": "tsx watch src/index.ts",
    "prepublishOnly": "npm run build"
  },
  "dependencies": {
    "asciitorium": "^0.1.11",
    "execa": "^9.3.0",
    "kolorist": "^1.8.0",
    "minimist": "^1.2.8",
    "prompts": "^2.4.2"
  },
  "devDependencies": {
    "@types/minimist": "^1.2.5",
    "@types/node": "^24.5.0",
    "@types/prompts": "^2.4.9",
    "tsx": "^4.20.0",
    "typescript": "^5.6.0"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "publishConfig": {
    "access": "public"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/tgruby/asciitorium.git"
  },
  "bugs": {
    "url": "https://github.com/tgruby/asciitorium/issues"
  }
